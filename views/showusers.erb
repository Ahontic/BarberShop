<h2>Список записавшихся</h2>

	<table class="table table-bordered">
		<thead>
				
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Date</th>
      <th scope="col">Barber</th>
      <th scope="col">Color</th>
    </tr>
  </thead>
  <tbody>
  	<% @results.each do |row| %>
    <tr>
    	<td><%= row['username'] %></td>
    	<td><%= row['Phone'] %></td>
      	<td><%= row['Datestamp'] %></td>
      <td><%= row['Barber'] %></td>
      <td><%= row['Color'] %></td>
    </tr>
    
    <% end%>
  </tbody>
</table>

