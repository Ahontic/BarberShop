<form action="/contacts" method="POST">

<div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input name="username" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="<%= @username %>">
</div>

<div class="form-group">
    <label for="exampleFormControlTextarea1">Комментарии</label>
    <textarea name="comments" class="form-control" id="exampleFormControlTextarea1" rows="3" value="<%= @comments %>"></textarea>
  </div>

  <input class="btn btn-primary" type="submit" value="Submit">
</form>