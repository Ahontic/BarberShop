<h2>Записаться</h2>

<form action="/visit" method="POST">

  <select name="barber" class="custom-select custom-select-lg mb-3 ccc">
  <option selected>Выберите вашего мастера</option>
  <option <%= @barber == 'Walter White' ? 'selected' : '' %> value="Walter White">Walter White</option>
  <option <%= @barber == 'Jessie Pinkman' ? 'selected' : '' %> value="Jessie Pinkman">Jessie Pinkman</option>
  <option <%= @barber == 'Gus Fring' ? 'selected' : '' %> value="Gus Fring">Gus Fring</option>
</select>

  <div class="form-group">
    <label>Ваше имя</label>
    <input id='aaa' name='username' type="text" class="form-control" placeholder="Введите ваше имя" value="<%= @username %>">
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input id='bbb' name='phone' type="text" class="form-control" placeholder="(123) 456-789" value="<%= @phone %>">
  </div>

  <div class="form-group">
    <label>Когда вас ждать?</label>
    <input name='date' type="date" class="form-control ccc" placeholder="Введите дату и время" value="<%= @date %>">
  </div>
  <div class="form-group">
    <label>Выберите цвет покраски?</label>
    <select id="color" name="color">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
  </select>
</div>
   
  <button type="submit" class="btn btn-primary">Записаться</button>
</form>

<script type="text/javascript">
  $(function () {
    // тут я могу написать любой код js, который исполнится после загрузки всего документа
  
  $('#color').simplecolorpicker()
  $('#aaa').css('background-color','purple')
  $('#bbb').css('background-color','blue')
  $('.ccc').css('background-color','yellow')

  
});
</script>